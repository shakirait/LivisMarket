
@using Livis.Market.Models.ViewModel;
@model FindUsernameView
@{
    ViewData["Title"] = "Find User";
    Layout = "/Views/Shared/_LisvisServerLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="info-body">
             @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <div class="alert alert-danger">
                        <strong>@ViewBag.ErrorMessage</strong>
                    </div>
                }
            <form asp-action="Index" method="post" enctype="multipart/form-data" class="table">
                <div class="col-md-6">
                    <div class="form-group col-md-12">
                        <label asp-for="Username" class="col-md-12 control-label"></label>
                        <div class="col-md-12">
                            <input asp-for="Username" class="form-control" required="true" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <input class="btn btn-primary" type="submit" value="Search" />
                    </div>
                </div>
            </form>
            @if(Model != null)
            {
                <form asp-action="UpdateInfo" method="post" enctype="multipart/form-data" class="table">
                    <div class="col-md-6">
                        <div class="form-group col-md-12">
                            <label asp-for="Username" class="col-md-12 control-label"></label>
                            <div class="col-md-12">
                                <input asp-for="Username" class="form-control" required="true" readonly="readonly" />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group col-md-12">
                            <label asp-for="Password" class="col-md-12 control-label"></label>
                            <div class="col-md-12">
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group col-md-12">
                            <label asp-for="PasswordConfirmation" class="col-md-12 control-label"></label>
                            <div class="col-md-12">
                                <input asp-for="PasswordConfirmation" class="form-control" />
                                <span asp-validation-for="PasswordConfirmation" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group col-md-12">
                            <label asp-for="IsLock" class="col-md-12 control-label"></label>
                            <div class="col-md-12">
                                <input type="checkbox" asp-for="IsLock" />
                                <span asp-validation-for="IsLock" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <input class="btn btn-primary" type="submit" value="Update" />
                        </div>
                    </div>
                </form>

            }
        </div>
    </div>
</div>
